<Window x:Class="PL.DroneDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneDisplay" Height="450" Width="800">
    <Grid>
        <Button Content="Close" HorizontalAlignment="Left" Margin="757,10,0,0" VerticalAlignment="Top" Background="#FFFA0000" Click="Close_Button"/>

        <TextBlock HorizontalAlignment="Left" Margin="355,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Text="Model:"/>
        <TextBox HorizontalAlignment="Left" Margin="396,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" TextChanged="Model_TextBox_Changed"/>

        <TextBlock HorizontalAlignment="Left" Margin="299,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"><Run Language="en-au" Text="Weight Catagory:"/></TextBlock>
        <ComboBox HorizontalAlignment="Left" Margin="396,195,0,0" VerticalAlignment="Top" Width="145" SelectionChanged="CMB_Weight_Changed">
            <ComboBoxItem Content="Light" />
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Heavy"/>
        </ComboBox>

        <TextBlock HorizontalAlignment="Left" Margin="315,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Battery Status:"/></TextBlock>
        <DockPanel VerticalAlignment="Top" Margin="396,222,259,0" Height="24">
            <TextBox Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Right" Width="34" RenderTransformOrigin="0.5,0.5" Height="20" >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Slider Maximum="100" Minimum="0" DockPanel.Dock="Bottom" Height="18" Width="100" />
        </DockPanel>

        <TextBlock HorizontalAlignment="Left" Margin="320,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Drone Status:"/></TextBlock>
        <ComboBox HorizontalAlignment="Left" Margin="396,251,0,0" VerticalAlignment="Top" Width="145" SelectionChanged="CMB_Status_Changed">
            <ComboBoxItem Content="Free" />
            <ComboBoxItem Content="Maintenance"/>
            <ComboBoxItem Content="Delivery"/>
        </ComboBox>

        <TextBlock HorizontalAlignment="Left" Margin="220,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Starting Basestation Location ID:"/></TextBlock>
        <TextBox PreviewTextInput="LocationValidation" TextChanged="Location_TextBox_Changed" HorizontalAlignment="Left" Margin="396,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"><Run Language="en-au" Text="Enter new Drone details:"/></TextBlock>

    </Grid>
</Window>
